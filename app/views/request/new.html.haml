.row
  .col-md-12
    %h3 Форма заполнения заявки
    .row
      - if !current_user.admin
        .col-md-3
          = render 'sidebar'
        .col-md-8
          = render 'form', act: @request, url: request_index_path, met: 'post',
            namebtn: 'Подать заявку'
      - else
        .col-md-8.col-md-offset-3
          = render 'form', act: @request, url: request_index_path, met: 'post',
              namebtn: 'Подать заявку'