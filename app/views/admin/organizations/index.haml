.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        Поиск организации
      .panel-body

        = form_tag search_admin_organizations_path, method: :post, remote: true do
          .row
            .col-md-4.col-md-offset-3
              = text_field_tag :name, '', class: "form-control", placeholder: 'Введите наименование организации'
            .col-md-4
              = submit_tag 'Поиск', class: 'btn btn-primary'
              = link_to 'Добавить организацию', new_admin_organization_path, class: 'btn btn-success'

#list
  =render 'list'

:javascript
  $('#name').autocomplete({
    minLength: 3,
    source: "/admin/organizations/search_name"

  });
